<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <% include ../common/head %>
</head>
<body onload="checked()">
<div class="container-fluid header-container">
    <% include ../common/header %>
</div>
<div class="container-fluid page-content">
    <form action="/profile/update" name="profileUpdate" method="post">
        <div class="container">
            <div class="row yesMarginY">
                <div class='col-xs-6 col-sm-3 col-md-3 user-pic' margin-bottom="50px">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <img src='/images/garett.jpg'/>
                        </div>
                    </div>
                    <div class="row yesPaddingTop">
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="number" class="rating" id="test" name="test" data-min="1" data-max="5"
                                   value="3"/>
                        </div>
                    </div>
                </div>
                <div class='col-xs-6 col-sm-9 col-md-9' margin-bottom="50px">
                    <div class="row yesPaddingTop">
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <label for="firstname">First Name</label>
                        </div>
                        <div class='col-xs-12 col-sm-9 col-md-9'>
                            <input type="text" id="firstname" name="firstname" value="<%= user.givenName %>"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="row yesPaddingTop">
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <label for="lastname">Last Name</label>
                        </div>
                        <div class='col-xs-12 col-sm-9 col-md-9'>
                            <input type="text" id="lastname" name="lastname" value="<%= user.surname %>"
                                   class="form-control"/>
                        </div>
                    </div>
                    <div class="row yesPaddingTop">
                        <div class="col-xs-12 col-sm-3 col-md-3">
                            <label for="emailaddress">Email</label>
                        </div>
                        <div class='col-xs-12 col-sm-9 col-md-9'>
                            <input type="text" id="emailaddress" name="email" value="<%= user.email %>"
                                   class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group material_accordion" id="accordion" role="tablist" aria-multiselectable="true">
            <!-- contact info update-->
            <% include ../common/contact_info_form.ejs %>
            <!-- dietary preferences general -->
            <% include ../common/dietary_preferences_general.ejs %>
            <!-- past ratings -->
            <% include ../common/past_ratings.ejs %>
            <!-- expert taster preference -->
            <% include ../common/expert_taster_preference.ejs %>
        </div>
        <div class="submitDiv">
            <button type="submit" class="btn btn-md">Submit</button>
        </div>
    </form>
</div>

<script>
    function checked() {
        var foundPref = <%- JSON.stringify(userInfo[7].dietaryPreferences) %> ;
        for (var i = 0; i < foundPref.length; i++) {
            document.getElementById(foundPref[i]).checked = true;
        }
    }
</script>
<!-- container -->
<div id="footer">
    <% include ../common/footer %>
</div>
<% include ../common/foot %>
</body>
</html>
